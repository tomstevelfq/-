/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/**search.wxss**/

.search {
  background-color:transparent;
  background-repeat: no-repeat;
  background-position: center;
  height: 80rpx;
  display: flex;
}

.inputInfo {
  height: 70rpx;
  width: 600rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.inputInfo input {
  background-color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  height: 60rpx;
}

.iconSearch {
  height: 50rpx;
  width: 50rpx;
}

.searc {
  margin-left: 50rpx;
  margin-top: 12rpx;
}

.imagestyle {
  width: 70%;
  height: 70rpx;
  margin: auto;
}

.liebiao {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: row;
}

.touxiang {
  margin-left: 2%;
  width: 200rpx;
  height: 100%;
}

.xinxi {
  display: flex;
  flex-direction: column;
  width: 380rpx;
  height: 100%;
}

.fenlei {
  height: 20%;
  width: 100rpx;
  margin-left: 50rpx;
  color: gray;
  font-size: 20rpx;
}

.biaoti {
  height: 20%;
  width: 80%;
  font-size: 35rpx;
}

.jieshao {
  height: 80%;
  width: 100%;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.jieshao text {
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.touxiangpic {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}

.change {
  background-color: #f0f2f4;
}
