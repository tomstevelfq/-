/* pages/buySecHand/buySecHand.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 10%;
}
.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    width: 25%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
    color: white;
    background-color:rgb(0, 174, 255);
}
.tab-box{
    background: greenyellow;
    padding-top: 80rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}

.imageFlex{
  width:350rpx;
  height:930rpx;
  display: flex;
  flex-direction: column;
  margin-top: -300rpx;
}

.lineFlex{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.money{
   font-size:30rpx;
   color:rgb(255, 102, 0);
}

.want{
   font-size:20rpx;
   color:rgba(0, 0, 0, 0.39);
}

.lineFlex2{
  display: flex;
  flex-direction: row;
}

.name{
  color: rgb(167, 156, 156);
}

.content{
  border-radius:30rpx;
}

.img1{
  border-top-left-radius: 20rpx; 
  border-top-right-radius: 20rpx;
  border-top: 1.2px solid #70bcf64d; 
  border-left: 1.2px solid #70bcf64d;
  border-right: 1.2px solid #70bcf64d;
}

.first{
  width:350rpx;
  background-color: rgba(220, 220, 220, 0.274);
  border-bottom-left-radius: 20rpx; 
  border-bottom-right-radius: 20rpx;
  border-bottom: 1.2px solid #70bcf64d; 
  border-left: 1.2px solid #70bcf64d;
  border-right: 1.2px solid #70bcf64d;
