/* pages/wantSecHand/wantSecHand.wxss */
.page{
  background-color:rgb(127, 245, 133);
  height:120%;
}

.line{
  border-top:0.3px rgba(17, 17, 17, 0.199) solid;
  margin-top: -10rpx;
  margin-bottom: 5rpx;
}

 .movie-container{
    display: flex;
    flex-direction: column;
  }
  .navbar{
    display: flex;
    position: absolute;
   left: 0;
    top: 0;
   z-index: 500;
   width: 100%;
   height: 50px;
   flex-direction: row;
   text-align: center;
   color: #A8A8A8;
   font-size: 15px;
   box-sizing: border-box;
   background-color: #FFF;
   border-bottom: 1rpx solid #DFDFDF;
 }
 .navbar-item{
   flex: 1;
   padding: 26rpx 0px;
 }
 .navbar-item-active{
   background-color: rgba(51, 166, 243, 0.678);
   transition: all 0.3s;
   color: #494949;
 }
 
 .showProducts{
   padding-top: 50px;
 }

 .productDisplay{
   display: flex;
   flex-direction: row;
   background-color: white;
 }
 
 .image{
   margin-bottom: 20rpx;
 }

 .describe{
   display: flex;
   flex-direction: column;
   justify-content: space-around;
 }

 .v1{
   font-size: 50rpx;
 }

 .v2{
   font-size: 30rpx;
 }

 .v3{
   font-size: 20rpx;
   color:#DFDFDF;
 }